<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/perguntaQuestao3"
        android:layout_width="296dp"
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
        android:text="@string/perguntaQuestao3"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupQuestao3"
        android:layout_width="287dp"
        android:layout_height="251dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonProximoQuestao3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perguntaQuestao3" >

        <RadioButton
            android:id="@+id/radioButtonOpcao1Questao3"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="@string/opcao1Questao3" />

        <RadioButton
            android:id="@+id/radioButtonOpcao2Questao3"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:text="@string/opcao2Questao3" />

        <RadioButton
            android:id="@+id/radioButtonOpcao3Questao3"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="@string/opcao3Questao3" />

        <RadioButton
            android:id="@+id/radioButtonOpcao4Questao3"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="@string/opcao4Questao3" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonProximoQuestao3"
        android:layout_width="178dp"
        android:layout_height="63dp"
        android:layout_marginBottom="88dp"
        android:text="@string/botaoProximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTituloHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="@string/homeTitulo"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonComecarHome"
        android:layout_width="153dp"
        android:layout_height="71dp"
        android:layout_marginTop="152dp"
        android:background="#099238"
        android:text="@string/homeBotaoComecar"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloHome" />

    <Button
        android:id="@+id/buttonInstrucoesHome"
        android:layout_width="153dp"
        android:layout_height="71dp"
        android:layout_marginTop="52dp"
        android:background="#1C80AD"
        android:text="@string/homeBotaoInstrucoes"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonComecarHome" />

    <TextView
        android:id="@+id/textViewDesenvolvedorHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homeDesenvolvedor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonInstrucoesHome" />

</androidx.constraintlayout.widget.ConstraintLayout>